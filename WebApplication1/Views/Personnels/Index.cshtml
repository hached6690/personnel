@model IEnumerable<WebApplication1.Models.Personnel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Personnels", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="form-group">
            <select name="sortName" class="form-control" onchange="this.form.submit();">
                <option value="">Sort name by &mdash;</option>
                <option value="desc" @(Request.QueryString["sortName"] =="desc" ? "selected" :"")>Descending</option>
                <option value="asc" @(Request.QueryString["sortName"] =="asc" ? "selected" :"")>Ascending</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" name="qryName" class="form-control" id="inputSearch" placeholder="Filter by name" value="@(Request.QueryString["qryName"])">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.POB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
